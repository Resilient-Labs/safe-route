<%- include('partials/header') -%>

<main class="container">

  <!-- Hero Section -->
  <section class="hero">
    <img src="/imgs/static-map-landing.png" alt="Map background with pins" class="hero-img" />
    <div class="hero-content">
      <h1 class="hero-title">SafeRoute</h1>
      <p class="hero-subtitle">Making Communities Safer, More Walkable, and Accessible for All</p>
      <div class="hero-buttons">
        <a href="/map" class="btn btn-primary">View Map</a>
        <a href="/signup" class="btn btn-outline">Sign Up</a>
